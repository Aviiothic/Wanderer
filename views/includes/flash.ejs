<!--success/failure ek array hai isliye hmko check krna pdega ki success exist kre aur wo khali bhi na ho-->

<!--Flash for Success-->
<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 d-flex justify-content-between align-items-center" role="alert">
      <span><%= success %></span>
      <button 
        type="button" 
        class="btn-close ms-3" 
        data-bs-dismiss="alert" 
        aria-label="Close">
      </button>
    </div>
  <% } %>


<!--Flash for Failure-->  
  <% if (failure && failure.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 d-flex justify-content-between align-items-center" role="alert">
      <span><%= failure %></span>
      <button 
        type="button" 
        class="btn-close ms-3" 
        data-bs-dismiss="alert" 
        aria-label="Close">
      </button>
    </div>
  <% } %>